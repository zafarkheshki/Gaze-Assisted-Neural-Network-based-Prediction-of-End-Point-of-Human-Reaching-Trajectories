<?xml version="1.0" ?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="ur5"> 
<xacro:arg name="transmission_hw_interface" default="hardware_interface/PositionJointInterface"/>
<!-- common stuff -->
<xacro:include filename="$(find ur_description)/urdf/common.gazebo.xacro"/>
<!-- ur5 -->
<xacro:include filename="$(find ur_description)/urdf/ur5.urdf.xacro"/>
<!-- arm -->
<xacro:ur5_robot prefix="" joint_limited="true" transmission_hw_interface="$(arg transmission_hw_interface)"/>
 <material name="blue">
    <color rgba="0 0 0.8 1"/>
  </material>

<link name="table">
    <visual>
	<origin rpy="0 0 0" xyz="0 0 0"/>
      <geometry>
        <box size="2 2 0.3"/>
      </geometry>
	<material name="blue"/>
    </visual>
    <collision>
      <geometry>
        <box size="2 2 0.3"/>
      </geometry>
    </collision>
  </link>

  <joint name="base_center" type="fixed">
    <parent link="table"/>
    <child link="base_link"/>
    <origin xyz="0.0 0 0.15" rpy="0 0 0"/>
  </joint>
</robot>
